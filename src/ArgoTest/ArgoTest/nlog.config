<?xml version="1.0" encoding="utf-8" ?>
<nlog
	xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="info"
      internalLogToConsole="true">
	<!-- enable asp.net core layout renderers -->
	<extensions>
		<add assembly="NLog.Web.AspNetCore" />
	</extensions>
	<!-- the targets to write to -->
	<targets>
		<target xsi:type="AsyncWrapper" name="console">
			<target xsi:type="Console">
				<layout xsi:type="JsonLayout">
					<attribute name="timestamp" layout="${longdate:universalTime=true}Z" />
					<attribute name="logLevel" layout="${level}" />
					<attribute name="application" layout="${appdomain:format={1\}}" />
					<attribute name="path" layout="${aspnet-request-url:IncludeHost=false:IncludeScheme=false}" />
					<attribute name="remoteIp" layout="${aspnet-request-ip}" />
					<attribute name="headers" encode="false" layout="${aspnet-request-headers:OutputFormat=JsonDictionary}" />
					<attribute name="requestId" layout="${aspnet-traceidentifier}" />
					<attribute name="refId" layout="${mdlc:item=razerId}" />
					<attribute name="message" layout="${message} ${exception:format=tostring}" />
					<attribute name="objectProperties" encode="false">
						<layout type="JsonLayout" includeAllProperties="true" maxRecursionLimit="7" />
					</attribute>
				</layout>
			</target>
		</target> 
	</targets>
	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="System.Net.Http.HttpClient.*" final="true" />
		<!--Skip non-critical Microsoft logs and so log only own logs-->
		<!--<logger name="Microsoft.EntityFrameworkCore.Database.Command" maxLevel="Info" writeTo="sqlLog" final="true" />-->
		<logger name="Microsoft.*" maxLevel="Info" final="true" />
		<!-- BlackHole without writeTo -->
		<!--<logger name="*" minlevel="Debug" writeTo="ownFile-web" />-->
		<logger name="*" minlevel="Info" writeTo="console" />
	</rules>
</nlog>